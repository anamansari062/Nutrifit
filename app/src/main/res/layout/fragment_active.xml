<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Register.ActiveFragment">

    <!-- TODO: Update blank fragment layout -->


    <!--    <ImageView-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:src="@drawable/ic_lowactive"/>-->

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="505dp"
        android:text="How Active are you?"
        android:textColor="#100F0F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/fragment_active_light"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="431dp"
        android:background="@drawable/registermalefemalenotfocus">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_lowactive" />

        <TextView
            android:id="@+id/low_active_text"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="108dp"
            android:text="Lightly Active"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_active_moderate"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="345dp"
        android:background="@drawable/registermalefemalenotfocus">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_moderate" />

        <TextView
            android:id="@+id/moderate_active_text"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:text="Moderately Active"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_active_high"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="243dp"
        android:background="@drawable/registermalefemalenotfocus">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_high" />

        <TextView
            android:id="@+id/high_active_text"
            android:layout_width="160dp"
            android:layout_height="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:text="Highly Active"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/active_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="135dp"
        android:text="NEXT"
        android:gravity="center"
        android:backgroundTint="@color/primaryColor"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_forward_24" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/active_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="135dp"
        android:text="BACK"
        android:backgroundTint="@color/primaryColor"
        android:gravity="center"
        android:clickable="true"
        android:src="@drawable/ic_baseline_arrow_forward_24" />
</RelativeLayout>